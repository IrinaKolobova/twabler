<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nltweets.twabler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.nltweets.twabler.activities.MenuActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.nltweets.twabler.activities.Welcome" />

        <activity android:name="com.nltweets.twabler.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nltweets.twabler.activities.Login" />
        </activity>

        <activity android:name="com.nltweets.twabler.activities.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nltweets.twabler.activities.SignUpOrLogIn"
            android:parentActivityName="com.nltweets.twabler.activities.Splash">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nltweets.twabler.activities.Splash" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nltweets.twabler.activities.Login"
            android:parentActivityName="com.nltweets.twabler.activities.SignUpOrLogIn">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nltweets.twabler.activities.SignUpOrLogIn" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.nltweets.twabler.activities.Registration" />
    </application>

</manifest>